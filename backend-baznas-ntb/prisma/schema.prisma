generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Role {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String  @unique
  description String?

  permission    Permission[]
  adminId       String       @unique @db.ObjectId
  admin         Admin        @relation(fields: [adminId], references: [id])
  contributorId String       @unique @db.ObjectId
  contributor   Contributor  @relation(fields: [contributorId], references: [id])

  @@index([name, adminId])
  @@index([name, contributorId])
}

model Permission {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?

  roleId String @db.ObjectId
  role   Role   @relation(fields: [roleId], references: [id])

  @@index([name])
  @@index([roleId])
  @@index([name, roleId])
}

model Admin {
  id             String           @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String           @unique
  password       String
  createdAt      DateTime         @default(now())
  role           Role?
  session        Session[]
  fundraising    Fundraising[]
  donatur        Donatur[]
  blog           Blog[]
  layananZis     LayananZis[]
  LaporanTahunan LaporanTahunan[]
  newsLatter     NewsLatter[]
  contributor    Contributor[]
  oneTimeLink    OneTimeLink[]

  @@index([createdAt])
  @@index([name, email])
}

model Contributor {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  position String
  email    String  @unique
  password String
  otp      String?

  role        Role?
  session     Session[]
  fundraising Fundraising[]
  blog        Blog[]

  adminId String? @db.ObjectId
  admin   Admin?  @relation(fields: [adminId], references: [id])

  @@index([name])
  @@index([adminId])
  @@index([position])
  @@index([name, email])
  @@index([name, position])
}

model Session {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  ipAddress  String
  userAgent  String
  token      String   @unique
  lastUsedAt DateTime @default(now())
  expiresAt  DateTime
  isRevoked  Boolean  @default(false)
  revokedAt  DateTime?

  adminId       String?      @db.ObjectId
  contributorId String?      @db.ObjectId
  admin         Admin?       @relation(fields: [adminId], references: [id])
  contributor   Contributor? @relation(fields: [contributorId], references: [id])

  @@index([ipAddress])
  @@index([lastUsedAt])
  @@index([expiresAt])
  @@index([isRevoked])
  @@index([adminId])
  @@index([contributorId])
  @@index([token, isRevoked])
  @@index([token, expiresAt])
  @@index([ipAddress, lastUsedAt])
}

model OneTimeLink {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  token     String
  expiredAt DateTime
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())

  adminId String? @db.ObjectId
  admin   Admin?  @relation(fields: [adminId], references: [id])

  @@index([token])
  @@index([expiredAt])
  @@index([isUsed])
  @@index([adminId])
  @@index([token, isUsed])
  @@index([token, expiredAt])
  @@index([createdAt])
}

model Fundraising {
  id              String                 @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  description     Description?
  distribution    Distribution[]
  targetAmount    Float
  currentAmount   Float
  programName     String
  programType     FundraisingProgramType @default(donasi)
  publicationDate DateTime
  expirationDate  DateTime
  status          Status                 @default(panding)
  transaction     Transaction[]

  adminId       String? @db.ObjectId
  contributorId String? @db.ObjectId

  admin       Admin?       @relation(fields: [adminId], references: [id])
  contributor Contributor? @relation(fields: [contributorId], references: [id])

  @@index([title])
  @@index([programName])
  @@index([programType])
  @@index([status])
  @@index([publicationDate])
  @@index([expirationDate])
  @@index([adminId])
  @@index([contributorId])
  @@index([title, status])
  @@index([programType, status])
  @@index([publicationDate, status])
}

model Description {
  id          String            @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  image       FundraisingImage?

  fundraisingId String      @unique @db.ObjectId
  fundraising   Fundraising @relation(fields: [fundraisingId], references: [id])

  @@index([title])
  @@index([title, fundraisingId])
}

model Distribution {
  id          String             @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  image       FundraisingImage[]

  fundraisingId String?      @db.ObjectId
  fundraising   Fundraising? @relation(fields: [fundraisingId], references: [id])

  @@index([title])
  @@index([fundraisingId])
  @@index([title, fundraisingId])
  @@index([title, description])
}

model FundraisingImage {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  fileName String
  url      String

  descriptionId  String  @unique @db.ObjectId
  distributionId String? @db.ObjectId

  description  Description   @relation(fields: [descriptionId], references: [id])
  distribution Distribution? @relation(fields: [distributionId], references: [id])

  @@index([fileName])
  @@index([distributionId])
  @@index([fileName, descriptionId])
  @@index([fileName, distributionId])
}

model Transaction {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  orderId     String
  grossAmount Float
  payment     Payment?

  donationType          DonationType
  tranxactionMidtransId String
  subCategory           SubCategoryType
  transactionDate       DateTime
  transactionStatus     TransactionStatusType @default(panding)
  riwayatTransaction    RiwayatTransaction[]

  fundraisingId String @db.ObjectId
  donaturId     String @db.ObjectId

  fundraising Fundraising @relation(fields: [fundraisingId], references: [id])
  donatur     Donatur     @relation(fields: [donaturId], references: [id])

  @@index([orderId])
  @@index([tranxactionMidtransId])
  @@index([transactionDate])
  @@index([transactionStatus])
  @@index([donationType])
  @@index([subCategory])
  @@index([fundraisingId])
  @@index([donaturId])
  @@index([orderId, transactionStatus])
  @@index([transactionDate, transactionStatus])
  @@index([donationType, subCategory])
}

model Donatur {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  fullName    String
  email       String
  noHp        String
  message     String
  isAnonym    Boolean       @default(false)
  transaction Transaction[]

  adminId String? @db.ObjectId
  admin   Admin?  @relation(fields: [adminId], references: [id])

  @@index([fullName])
  @@index([email])
  @@index([noHp])
  @@index([isAnonym])
  @@index([adminId])
  @@index([fullName, email])
  @@index([email, noHp])
  @@index([fullName, isAnonym])
}

model RiwayatTransaction {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  status      String
  description String
  amount      Float

  transactionId String      @unique @db.ObjectId
  transaction   Transaction @relation(fields: [transactionId], references: [id])

  @@index([status])
  @@index([amount])
  @@index([status, amount])
  @@index([status, transactionId])
}

model Payment {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId
  paymentMethod PaymentType

  bankTransfer BankTransfer?
  creditCard   CreditCard?
  gopay        Gopay?
  cStore       Cstore?

  transactionId String      @unique @db.ObjectId
  transaction   Transaction @relation(fields: [transactionId], references: [id])

  @@index([paymentMethod])
  @@index([paymentMethod, transactionId])
}

model BankTransfer {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  bank     BankType
  vaNumber String
  eChannel Echannel?

  paymentId String  @unique @db.ObjectId
  payment   Payment @relation(fields: [paymentId], references: [id])

  @@index([bank])
  @@index([vaNumber])
  @@index([bank, vaNumber])
  @@index([vaNumber, paymentId])
}

model CreditCard {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  orderId          String
  grossAmount      Float
  cardNumber       String
  tokenId          String
  bankOneTimeToken String
  cardExpYear      String
  cardExpMonth     String
  cardCvv          String
  authentication   Boolean

  paymentId String  @unique @db.ObjectId
  payment   Payment @relation(fields: [paymentId], references: [id])

  @@index([orderId])
  @@index([tokenId])
  @@index([cardNumber])
  @@index([orderId, tokenId])
  @@index([orderId, paymentId])
  @@index([tokenId, authentication])
}

model Gopay {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  enableCollback Boolean
  callbackUrl    String

  paymentId String  @unique @db.ObjectId
  payment   Payment @relation(fields: [paymentId], references: [id])

  @@index([enableCollback])
  @@index([paymentId, enableCollback])
}

model Cstore {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  store             Boolean
  message           String
  alfamartFreeText1 String?
  alfamartFreeText2 String?

  paymentId String  @unique @db.ObjectId
  payment   Payment @relation(fields: [paymentId], references: [id])

  @@index([store])
  @@index([store, paymentId])
  @@index([message])
}

model Echannel {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  billKey   String
  billInfo1 String?
  billInfo2 String?

  bankTransferId String       @unique @db.ObjectId
  bankTransfer   BankTransfer @relation(fields: [bankTransferId], references: [id])

  @@index([billKey])
  @@index([billKey, bankTransferId])
}

model Slider {
  id              String         @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  description     String?
  sliderType      SliderType
  image           ContentImage[]
  bublicationDate DateTime
  expiredDate     DateTime

  @@index([title])
  @@index([sliderType])
  @@index([bublicationDate])
  @@index([expiredDate])
  @@index([title, sliderType])
  @@index([bublicationDate, expiredDate])
  @@index([sliderType, bublicationDate])
}

model Background {
  id             String         @id @default(auto()) @map("_id") @db.ObjectId
  sesction       String
  backgroundType SliderType
  image          ContentImage[]

  @@index([sesction])
  @@index([backgroundType])
  @@index([sesction, backgroundType])
}

model ContentImage {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  fileName String
  url      String

  sliderId     String     @db.ObjectId
  backgroundId String     @db.ObjectId
  slider       Slider     @relation(fields: [sliderId], references: [id])
  background   Background @relation(fields: [backgroundId], references: [id])

  @@index([fileName])
  @@index([sliderId])
  @@index([backgroundId])
  @@index([fileName, sliderId])
  @@index([fileName, backgroundId])
}

model Blog {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  body      String
  blogType  BlogType    @default(artikel)
  image     BlogImage[]
  status    Status      @default(panding)
  createdAt DateTime    @default(now())

  adminId       String?      @db.ObjectId
  contributorId String?      @db.ObjectId
  admin         Admin?       @relation(fields: [adminId], references: [id])
  contributor   Contributor? @relation(fields: [contributorId], references: [id])

  @@index([title])
  @@index([blogType])
  @@index([status])
  @@index([createdAt])
  @@index([adminId])
  @@index([contributorId])
  @@index([title, blogType])
  @@index([title, status])
  @@index([blogType, status])
  @@index([createdAt, status])
}

model BlogImage {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  fileName String
  url      String

  blogId String @db.ObjectId
  blog   Blog   @relation(fields: [blogId], references: [id])

  @@index([fileName])
  @@index([blogId])
  @@index([fileName, blogId])
}

model LayananZis {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  fullName    String
  email       String
  noHp        String
  layananType LayananType
  tentang     String
  message     String

  adminId String? @db.ObjectId
  admin   Admin?  @relation(fields: [adminId], references: [id])

  @@index([fullName])
  @@index([email])
  @@index([noHp])
  @@index([layananType])
  @@index([adminId])
  @@index([fullName, layananType])
  @@index([email, noHp])
  @@index([layananType, adminId])
}

model LaporanTahunan {
  id        String               @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  file      FileLaporanTahunan[]
  createdAt DateTime             @default(now())

  adminId String? @db.ObjectId
  admin   Admin?  @relation(fields: [adminId], references: [id])

  @@index([title])
  @@index([createdAt])
  @@index([adminId])
  @@index([title, createdAt])
  @@index([title, adminId])
}

model FileLaporanTahunan {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  fileName String
  url      String

  laporanTahunanId String         @db.ObjectId
  laporanTahunan   LaporanTahunan @relation(fields: [laporanTahunanId], references: [id])

  @@index([fileName])
  @@index([laporanTahunanId])
  @@index([fileName, laporanTahunanId])
}

model NewsLatter {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  email        String   @unique
  sendedAt     DateTime
  targetSended DateTime
  totalSended  Int
  createdAt    DateTime @default(now())

  adminId String? @db.ObjectId
  admin   Admin?  @relation(fields: [adminId], references: [id])

  @@index([sendedAt])
  @@index([targetSended])
  @@index([createdAt])
  @@index([adminId])
  @@index([email, sendedAt])
  @@index([targetSended, totalSended])
  @@index([sendedAt, targetSended])
}

/**
 * Status untuk fundraising
 */

enum Status {
  panding
  approved
  rejected
}

/**
 * Jenis program untuk fundraising
 */

enum FundraisingProgramType {
  donasi
  fidyah
}

/**
 * Jesnis donasi
 */

enum DonationType {
  donasi
  infak
  fidyah
  zakat
}

/**
 * sub category untuk transaction zakat
 */

enum SubCategoryType {
  zakat_harta
  zakat_profesi
  zakat_simpanan
  zakat_perdagangan
}

/**
 * Status untuk transaction
 */

enum TransactionStatusType {
  panding
  success
  cancel
}

/**
 * payment method
 */

enum PaymentType {
  bank_transfer
  credit_card
  gopay
  cstore
}

/**
 * nama bank untuk bank transfer
 */

enum BankType {
  bca
  bni
  bri
  mandiri_bill
  permata
  cimb
}

/**
 * type halaman sesuai dengan slider dan main contant
 */

enum SliderType {
  landing_page
  zakat_page
  infak_page
}

/**
 * type halaman sesuai dengan slider dan main contant
 */

enum BlogType {
  artikel
  cerita_aksi
  press_release
}

/**
 * type halaman sesuai dengan slider dan main contant
 */

enum LayananType {
  konsultasi
  konfirmasi
}
